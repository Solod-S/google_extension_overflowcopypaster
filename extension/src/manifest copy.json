{
  "manifest_version": 3,
  "author": "Solod Serbey",
  "name": "Stackoverflow Copypaster",
  "description": "Copy faster from stackoverflow",
  "options_page": "options.html",
  "about_page": "about.html",
  "commands": {
    "copy-all": {
      "suggested_key": { "default": "Alt+Up" },
      "description": "Copy all text"
    }
  },
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://stackoverflow.com/*"],
      "run_at": "document_idle",
      "all_frames": false,
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "host_permissions": [
    "https://stackoverflow.com/*",
    "https://accounts.google.com/*"
  ],
  "permissions": ["identity", "scripting", "storage"],
  "oauth2": {
    "client_id": "617516811579-nrre6b2nq6uim4cuotgd9fuac4g72gua.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "script-src": ["self", "https://accounts.google.com"],
    "script-src-elem": ["self", "https://accounts.google.com"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "execute_copy.js",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": ["https://stackoverflow.com/*"]
    }
  ]
}
