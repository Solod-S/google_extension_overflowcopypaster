{
  "manifest_version": 3,
  "author": "Solod Serbey",
  "name": "Stackoverflow Copypaster",
  "description": "Copy faster from stackoverflow",
  "options_page": "options.html",

  "commands": {
    "copy-all": {
      "suggested_key": { "default": "Alt+Up" },
      "description": "Copy all text"
    }
  },
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "include_globs": ["*://*.stackoverflow.com/*", "*://stackoverflow.com/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "host_permissions": ["https://stackoverflow.com/*"],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "execute_copy.js",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
